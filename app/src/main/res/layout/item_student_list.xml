<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_avatar_background"
            android:src="@drawable/ic_person"
            android:padding="12dp" />

        <!-- Student Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

            <TextView
                android:id="@+id/tvRollNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enrollment No: 1234"
                android:textSize="14sp"
                android:textColor="@color/on_surface_variant"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/status_absent_text"
            android:background="@drawable/badge_absent"
            android:layout_marginEnd="16dp" />

        <!-- Switch -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:theme="@style/SwitchTheme" />

    </LinearLayout>

</androidx.cardview.widget.CardView>