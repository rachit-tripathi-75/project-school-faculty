        <!-- Custom DatePicker Dialog Style -->
        <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
            <item name="colorPrimary">@color/primary_blue</item>
            <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
            <item name="colorAccent">@color/primary_blue</item>
            <item name="android:datePickerStyle">@style/CustomDatePicker</item>
        </style>

        <style name="CustomDatePicker" parent="Widget.MaterialComponents.MaterialCalendar">
            <item name="android:headerBackground">@color/primary_blue</item>
