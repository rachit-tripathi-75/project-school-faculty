<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!-- Circle image view style -->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!-- Account Option Card Style -->
    <style name="AccountOptionCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:stateListAnimator">@animator/card_elevation_animator</item>
    </style>

    <!-- Account Option Layout Style -->
    <style name="AccountOptionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Icon Container Style -->
    <style name="IconContainer">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/circle_blue_light</item>
    </style>

    <!-- Option Icon Style -->
    <style name="OptionIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <!-- Option Text Container Style -->
    <style name="OptionTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <!-- Option Title Style -->
    <style name="OptionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Option Description Style -->
    <style name="OptionDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Chevron Icon Style -->
    <style name="ChevronIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="tint">@color/text_tertiary</item>
    </style>


    <!-- Switch Theme -->
    <style name="SwitchTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/success</item>
        <item name="colorOnPrimary">@color/surface</item>
        <item name="colorSecondary">@color/success_light</item>
        <item name="colorOnSecondary">@color/success_dark</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/surface</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/outline</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>


    <!-- Base application theme -->
    <style name="Theme.TeacherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.TeacherApp.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.TeacherApp.Button.TextButton</item>

        <!-- Text input styles -->
        <item name="textInputStyle">@style/Widget.TeacherApp.TextInputLayout</item>

        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.TeacherApp.CardView</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="Widget.TeacherApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="Widget.TeacherApp.Button.Primary" parent="Widget.TeacherApp.Button">
        <item name="backgroundTint">@color/blue_600</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.TeacherApp.Button.Secondary" parent="Widget.TeacherApp.Button">
        <item name="backgroundTint">@color/green_600</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.TeacherApp.Button.Tertiary" parent="Widget.TeacherApp.Button">
        <item name="backgroundTint">@color/purple_600</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.TeacherApp.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/blue_600</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/blue_600</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="Widget.TeacherApp.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_600</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!-- Text Input Layout Styles -->
    <style name="Widget.TeacherApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/blue_600</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/blue_600</item>
        <item name="android:textColorHint">@color/gray_600</item>
    </style>

    <style name="Widget.TeacherApp.TextInputLayout.Dense" parent="Widget.TeacherApp.TextInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TeacherApp.TextInputLayout.Dense
        </item>
    </style>

    <!-- Card View Styles -->
    <style name="Widget.TeacherApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.TeacherApp.CardView.Elevated" parent="Widget.TeacherApp.CardView">
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Widget.TeacherApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/blue_600</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Tab Layout Styles -->
    <style name="Widget.TeacherApp.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabSelectedTextColor">@color/blue_600</item>
        <item name="tabTextColor">@color/gray_600</item>
        <item name="tabIndicatorColor">@color/blue_600</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.TeacherApp.Tab</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.TeacherApp.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/blue_600</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="closeIconTint">@color/white</item>
    </style>

    <style name="Widget.TeacherApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/gray_200</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- Radio Button Styles -->
    <style name="Widget.TeacherApp.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/blue_600</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.TeacherApp.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TeacherApp.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TeacherApp.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TeacherApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.TeacherApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.TeacherApp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TeacherApp.Tab" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Theme Overlays -->
    <style name="ThemeOverlay.TeacherApp.TextInputLayout.Dense" parent="">
        <item name="editTextStyle">
            @style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>

    <!-- Upload Area Styles -->
    <style name="Widget.TeacherApp.UploadArea" parent="">
        <item name="android:background">@drawable/upload_area_background</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- List Item Styles -->
    <style name="Widget.TeacherApp.ListItem" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Floating Action Button Styles -->
    <style name="Widget.TeacherApp.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/blue_600</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="Widget.TeacherApp.ProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackColor">@color/gray_200</item>
        <item name="indicatorColor">@color/blue_600</item>
        <item name="trackThickness">4dp</item>
    </style>

    <!-- Snackbar Styles -->
    <style name="Widget.TeacherApp.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/gray_800</item>
    </style>

    <style name="Widget.TeacherApp.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

























